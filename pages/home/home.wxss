.flash{
  width: 95%;
  height: 380rpx;
  background:rgb(255, 138,18);
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  border-radius: 40rpx;
}
.flash .flash-top{
  color: #fff;
}
.flash .flash-bottom{
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-top: 10rpx;
}
.flash .flash-bottom .flash-item{
  width: 30%;
  height: 300rpx;
  border: 1px solid #000;
  background: #fff;
}
.flash .flash-bottom .flash-item image{
  height: 200rpx;
  width: 100%;
}
.flash-item .text{
  border-top-style: dashed;
  border-top-width: 2rpx;
  display: block;
}
