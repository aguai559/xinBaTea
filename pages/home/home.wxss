.flash-item .price.nprice{
  color: red;
  margin-right: 10rpx;
}
.flash-item .price .oprice{
  text-decoration:line-through;
  font-size: 25rpx;
  color: #999;
}
.bottom{
  width: 95%;
  height: 15vh;
  margin: 20rpx auto;
  background: white;
  border-radius: 25rpx;
  padding: 20rpx;
  box-sizing: border-box;
  /* margin-bottom: 10vh; */
}
.title{
  margin-bottom: 20rpx;
  font-weight: bold;
}
.main{
  display: flex;
}
.map,.about{
  width: 150rpx;
  height: 10vh;
  
  display: flex;
  flex-direction: column;
  text-align: center;
  /* margin-right: 10rpx; */
}
.location,.book{
  display: inline-block;
  width: 65rpx;
  height: 5vh;
  /* background:deepskyblue; */
  color: rgb(6, 165, 20);
  text-align: center;
  line-height: 5vh;
  font-size: 40rpx;
  margin: 0 auto;
}