.container{
  width: 100%;
  height: 100vh;
  /* background: greenyellow; */
  overflow: hidden;
  background-image: url('https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=1916512990,2449568867&fm=26&gp=0.jpg');
