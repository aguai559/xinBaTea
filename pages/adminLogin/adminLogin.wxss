.login{
  width: 80%;
  height: 500rpx;
  /* background: white; */
  margin: 40rpx auto;
  border-radius: 25rpx;
  overflow: hidden;
}
.form{
  display: block;
  width: 80%;
  height: 80%;
  margin: 30rpx auto;
}
label{
  color: white;
}
#username,#password{
  border: 2rpx solid white;
  width: 80%;
  margin:0 auto;
  border-radius: 25rpx;
  margin-bottom: 30rpx;
  color: white;
  padding: 0 20rpx;
}
.btn{
  position: absolute;
  top: 28%;
  left: 50%;
  transform: translate(-50%,-50%);
  background:white;
}